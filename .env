# Telegram Bot Token
BOT_TOKEN=your_telegram_bot_token_here

# Обязательно проверьте правильность URL для API
# Добавьте протокол (https:// или http://) и порт, если требуется
# Настройки бэкенда - проверьте правильность URL
# URL должен указывать на базовый адрес API без /api в конце
BACKEND_URL=http://bot.moverspb.ru:3003
BACKEND_PORT=3003

# Порт для Express-сервера бота
BOT_PORT=3013

# Порт для админ-панели
ADMIN_PORT=4200

# Настройки SSL (пути к сертификатам)
SSL_CERT_PATH=./admin-panel/cert.pem
SSL_KEY_PATH=./admin-panel/privkey.pem

# Автоматическое освобождение портов (true/false)
AUTO_FREE_PORTS=false

# Настройки таймаутов для сетевых запросов (в миллисекундах)
HTTP_TIMEOUT=60000
HTTPS_TIMEOUT=60000

# Максимальное количество попыток перезапуска
MAX_BOT_RETRIES=5
MAX_BACKEND_RETRIES=5
MAX_ADMIN_RETRIES=3
